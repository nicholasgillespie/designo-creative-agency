---
// Imports
import CompLogoLink from "./CompLogoLink.astro";
import CompNavigation from "./CompNavigation.astro";
import CompSocialLinks from "./CompSocialLinks.astro";
import SiteSvgs from "./SiteSvgs.astro";
---

<footer class="site-footer">
  <div class="l-wrapper l-region">
    <div class="l-repel">
      <CompLogoLink variant="light" />
      <!-- Omit label if navigation links are identical. -->
      <CompNavigation/>
    </div>
    <div class="site-footer__contact | l-switcher">
      <p>
        <b>Designo Central Office</b><br>
        3886 Wellington Street<br>
        Toronto, Ontario M9C 3J5<br>
      </p>
      <p>
        <b>Contact Us (Central Office)</b><br>
        P : +1 253-863-8967<br>
        M : contact@designo.co<br>
      </p>
      <div class="site-footer__contact-social">
        <CompSocialLinks />
      </div>
    </div>
    <SiteSvgs />
  </div>
</footer>

<style lang="scss">
  @use "../styles/10-functions/theme-accessor" as *;
  @use "../styles/20-mixins/media-query" as *;

  :global(.social-links) {
    --space-cluster: var(--space-s);
    --cluster-direction: row;
    --cluster-horizontal-alignment: center;
    --cluster-vertical-alignment: center;
  }

  .site-footer {
    --space-region: #{get(space, xl-2xl)};
    --repel-direction: column;
    --cluster-direction: column;
    --switcher-item-target-width: 99rem;
    --space-switcher: var(--space-m);
    text-align: center;
    background-color: get(color, black);
    color: get(color, white);
  }

  .site-footer__contact {
    margin-block-start: var(--space-gutter);
    padding-block-start: var(--space-gutter);
    border-block-start: var(--border);
    color: #8f8e8f;
  }

  .site-footer__contact-social {
    margin-block-start: auto;
  }

  @include media-query(from, tablet) {
    :global(.social-links) {
      --cluster-horizontal-alignment: end;
    }

    .site-footer {
      --repel-direction: row;
      --repel-horizontal-alignment: space-between;
      --cluster-direction: row;
      --switcher-item-target-width: 0.01rem;
      --space-switcher: var(--space-xl);
      text-align: start;
    }
  }
</style>