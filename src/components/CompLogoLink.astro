---
// Imports
import { CONFIG_BASE, SITE_TITLE } from "../consts";

// Component Props
const { variant = "dark" } = Astro.props;
---

<a href={CONFIG_BASE === "" ? "/" : CONFIG_BASE}>
  <img class="site-logo" src={`${CONFIG_BASE}/images/shared/desktop/logo-${variant}.png`} alt="">
  <span class="u-vh">{SITE_TITLE}</span>  
</a>

<style lang="scss">
  @use "../styles/10-functions/theme-accessor" as *;

  .site-logo {
    block-size: get(font-size, site-logo);
  }
</style>