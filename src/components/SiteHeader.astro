---
// Imports
import CompSkipLink from "./CompSkipLink.astro";
import CompNavigation from "./CompNavigation.astro";
import CompLogoLink from "./CompLogoLink.astro";
import CompButton from "./CompButton.astro";
---

<slot slot="scripts">
  <script src="../scripts/site-hamburger.js"></script>
</slot>

<header class="site-header">
  <CompSkipLink targetId="main" />

  <div class="l-wrapper l-region">
    <div class="l-repel">
      <CompLogoLink variant="dark" />
      <!-- Omit label if navigation links are identical. -->
      <CompNavigation>
        <CompButton text="Open Navigation" />
      </CompNavigation>
    </div>
  </div>
</header>

<style lang="scss">
  @use "../styles/10-functions/theme-accessor" as *;
  @use "../styles/20-mixins/media-query" as *;

  .site-header {
    --space-region: #{get(space, m-xl)};
  }

  .site-header :global(nav ul) {
    display: none;
  }


  @include media-query(from, tablet) {
    .site-header button {
      display: none;
    }

    .site-header :global(nav ul) {
      display: flex;
    }
  }
</style>