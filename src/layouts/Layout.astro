---
// Imports
import BaseHead from '../components/BaseHead.astro';
import SiteHeader from '../components/SiteHeader.astro';
import SiteFooter from '../components/SiteFooter.astro';

// Component Props
const { metaTitle, metaDescription, class: classList = "", variant } = Astro.props;
---

<html lang="en">
	<BaseHead {metaTitle} {metaDescription} />
	<body>
		<!-- Header -->
		<SiteHeader />
		<!-- Slot for main content -->
		<main id="main" {...(classList ? { class: classList } : {})}>
			 <slot />
		</main>
		<!-- Footer -->
		<SiteFooter {variant} />
		<!-- Slot for scripts | <slot slot="scripts"></slot> -->
		<slot name="scripts"></slot>
	</body>
</html>