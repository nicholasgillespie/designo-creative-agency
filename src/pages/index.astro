---
// Imports
import Layout from '../layouts/Layout.astro';
import { CONFIG_BASE } from "../consts.ts";
import CompButton from '../components/CompButton.astro';
import CompPageLinksItem from '../components/CompPageLinksItem.astro';
import CompCard from '../components/CompCard.astro';

// Static Data
const metaTitle = "Home";
const metaDescription = "Explore Alex Spencer's portfolio for cutting-edge web development and design. Specializing in HTML, CSS, JavaScript, and React. Based in London, UK, and open to remote opportunities.";
---

<Layout {metaTitle} {metaDescription} variant="call-to-action">
	<section class="header | l-wrapper">
		<div class="header__inner | l-columns l-region l-box">
			<div class="header__content | l-columns--3-5 l-flow">
				<h1>Award-winning custom designs and digital branding solutions</h1>
				<p>With over 10 years in the industry, we are experienced in creating fully responsive websites, app design, and engaging brand experiences. Find out more about our services.</p>
				<CompButton href={`${CONFIG_BASE}/about`} text="learn more" />
			</div>
			<div class="header__image |  l-columns--2-5">
				<img class="l-frame" src={`${CONFIG_BASE}/images/home/desktop/image-hero-phone.png`} alt="">				
			</div>
		</div>
	</section>

	<section class="services | l-wrapper l-switcher">
		<h2 class="u-sr-only">Our Services</h2>
		<CompPageLinksItem pageToShow="web-design" variant="home" />
		<div class="l-stack">
			<CompPageLinksItem pageToShow="app-design" />
			<CompPageLinksItem pageToShow="graphic-design" />
		</div>
	</section>

	<section class="values | l-wrapper l-switcher">
		<CompCard 
			imgSrc={`${CONFIG_BASE}/images/home/desktop/illustration-passionate.svg`} 
			imgAlt="" 
			title="Passionate" 
			description="Each project starts with an in-depth brand research to ensure we only create products that serve a purpose. We merge art, design, and technology into exciting new solutions." 
		/>
		<CompCard
			imgSrc={`${CONFIG_BASE}/images/home/desktop/illustration-resourceful.svg`} 
			imgAlt="" 
			title="Resourceful" 
			description="Everything that we do has a strategic purpose. We use an agile approach in all of our projects and value customer collaboration. It guarantees superior results that fulfill our clientsâ€™ needs."
		/>
		<CompCard
			imgSrc={`${CONFIG_BASE}/images/home/desktop/illustration-friendly.svg`} 
			imgAlt="" 
			title="Friendly" 
			description="We are a group of enthusiastic folks who know how to put people first. Our success depends on our customers, and we strive to give them the best experience a company can provide."
		/>
	</section>

</Layout>

<style lang="scss">
  @use "../styles/10-functions/theme-accessor" as *;
  @use "../styles/20-mixins/media-query" as *;

	section {
		margin-block-end: var(--space-region);
	}

	.header {
		--space-wrapper: 0;
		--space-box: var(--space-s-2xl);
		--space-flow: 2em;
		z-index: 1;
		color: get(color, white);
		overflow: hidden;
	}
	
	.header__inner {
		--columns: 1;
		--space-region: var(--space-region-s) 0;
		--space-columns: 0;
		border: none;
		border-block-end: var(--border);
	}
	
	.header__inner::before {
		content: "";
		position: absolute;
		inset: 0;
		background-color: get(color, peach);
		background-repeat: no-repeat;
		background-image: url('/images/home/desktop/bg-pattern-hero-home.svg');
    background-position: left;
    z-index: -2;
	}

	.header__content {
		text-align: center;
	}

	.header__content h1 {
		max-inline-size: 18ch;
		margin-inline: auto;
	}

	.header__content p {
		max-inline-size: 45ch;
		margin-inline: auto;
	}

	.header__image {
		--frame-width: 624 ;
		--frame-height: 624;
		z-index: -1;
	}

	.header__image img {
		block-size: 100%;
		inline-size: 100%;
		transform: scale(1.3);
		object-fit: cover;
		object-position: center top;
	}

	.services {
		--space-switcher: var(--space-gutter-s);
		--switcher-vertical-alignment: stretch;
	}

	.services > div {
		--space-stack: var(--space-gutter-s);
		--stack-horizontal-alignment: stretch;
	}

	.services > :global(a picture) {
		block-size: 100%;
	}

	.values {
		--space-switcher: var(--space-region);
		--space-sidebar: var(--space-xl);
		--switcher-item-target-width: 99rem;
	}

	@include media-query(from, tablet) {
		.header {
			--space-wrapper: var(--space-gutter);
			--box-radius: var(--radius-l);
		}
		
		.header__inner {
			overflow: hidden;
			border: var(--border);
		}

		.header__inner::before {
			content: "";
			background-position: 5rem;
		}

		.header__image {
			--frame-width: 624 ;
			--frame-height: 624;
		}
		
		.values {
			--space-switcher: var(--space-l);
			--space-sidebar: var(--space-l);
			--sidebar-target-width: var(--item-size-min);
			--sidebar-content-min-width: 50%;
		}
	}
	
	@include media-query(from, desktop) {
		.header__inner {
			--columns: 12;
			--space-columns: var(--space-gutter);
		}

		.header__inner::before {
			content: "";
			background-position: 100% 0%;
		}

		.header__content {
			text-align: start;
			margin-block-end: var(--space-s-2xl);
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: flex-start;
		}

		.header__content :global(.button) {
			justify-content: flex-start;
		}

		.header__content h1,
		.header__content p {
			margin-inline: unset;
		}

		.header__image {
			--frame-height: 724;
		}
		
		.values {
			--switcher-item-target-width: 0.01rem;
			justify-content: center
		}

		.values .l-sidebar {
			justify-content: center
		}

		.value__image {
			inline-size: 100%;
		}

		.value__image img {
			inline-size: 70%;
		}
	}
</style>