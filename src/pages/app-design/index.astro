---
// Imports
import { getCollection } from "astro:content";
import { slugify } from "../../scripts/helpers/slugify";
import Layout from '../../layouts/Layout.astro';
import PageService from "../../components/PageService.astro";

// Static Data
const metaTitle = "App Design";
const metaDescription = "Our mobile designs bring intuitive digital solutions to your customers right at their fingertips.";

// Dynamic Data & Logic
const items = (await getCollection(slugify(metaTitle)));
---

<Layout {metaTitle} {metaDescription} variant="call-to-action">
	<PageService {metaTitle} {metaDescription} {items} />
</Layout>
